{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="container">
    <h1 class="text-center text-uppercase">Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>NumArticle</th>
                <td>{{ article.numArticle }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ article.designation }}</td>
            </tr>
            <tr>
                <th>PrixUnitaire</th>
                <td>{{ article.prixUnitaire }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-success shadow text-uppercase m-3" href="{{ path('app_article_index') }}">Retour Liste</a>

    <a class="btn btn-warning shadow text-uppercase m-3 text-light" href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
    </div>
{% endblock %}
